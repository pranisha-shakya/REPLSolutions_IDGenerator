@model IEnumerable<REPLSolutions_IDGenerator.Models.Student>

@{
    ViewData["Title"] = "Select Student";
}

<h2>Select a Student</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Id</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@(student.Admissions?.FirstOrDefault()?.Class?.Name ?? "N/A")</td>
                <td>@student.Id</td>
                <td>
                    <a asp-action="Generate" asp-route-studentId="@student.Id" class="btn btn-primary">
                        Generate ID Card
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
